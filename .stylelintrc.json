{
  "extends": "stylelint-config-standard",
  "plugins": ["stylelint-order"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["function", "if", "include", "mixin", "return"]
      }
    ],
    "no-descending-specificity": null,
    "order/properties-alphabetical-order": true
  }
}
